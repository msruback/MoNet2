<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/offWhite</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDarker</item>
        <item name="android:textColorPrimary">@color/common_google_signin_btn_text_light_focused</item>
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    </style>



    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowBackground">@drawable/repeat_squids</item>

    </style>

</resources>
