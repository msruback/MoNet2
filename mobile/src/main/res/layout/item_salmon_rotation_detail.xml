<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/StageImage"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:src="@drawable/stage_lost_outpost"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="0dp" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/shape_card"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/StageImage"
        app:layout_constraintRight_toRightOf="@+id/StageImage"
        android:backgroundTint="@color/transparentgrey">
        <TextView
            android:id="@+id/StageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Marooner's Bay"
            android:textColor="@color/offWhite"
            android:textSize="16sp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timeLayout"
            android:layout_width="270dp"
            android:layout_height="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/StageImage"
            android:background="@drawable/banner_salmon"
            android:backgroundTint="@color/salmonAccent"
            android:elevation="3dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="7dp"
                android:text="11/9 7 AM to 11/10 7 AM"
                android:textColor="@color/offWhite"
                android:textSize="15sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/timeLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="5dp">
            <RelativeLayout
                android:id="@+id/weapon1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/salmon_egg"
                android:elevation="3dp">
                <ImageView
                    android:id="@+id/Weapon1Image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/weapon_sloshing_machine"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/weapon2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/weapon1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/salmon_egg"
                android:elevation="3dp">
                <ImageView
                    android:id="@+id/Weapon2Image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/weapon_sloshing_machine"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/weapon3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/weapon2"
                android:layout_marginLeft="15dp"
                android:background="@drawable/salmon_egg"
                android:elevation="3dp">
                <ImageView
                    android:id="@+id/Weapon3Image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/weapon_sloshing_machine"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/weapon4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/weapon3"
                android:layout_marginLeft="15dp"
                android:background="@drawable/salmon_egg"
                android:elevation="3dp">
                <ImageView
                    android:id="@+id/Weapon4Image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/weapon_sloshing_machine"/>
            </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>