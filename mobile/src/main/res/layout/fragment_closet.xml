<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgrey">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/repeat_macaroni"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:elevation="5dp">

        <RelativeLayout
            android:id="@+id/HeadTab"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="-30dp"
            android:background="@color/colorAccent"
            android:paddingBottom="5dp"
            android:paddingTop="35dp">

            <ImageView
                android:id="@+id/HeadImage"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/head" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ClothesTab"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="-30dp"
            android:layout_toRightOf="@+id/HeadTab"
            android:background="@color/colorAccent"
            android:paddingBottom="5dp"
            android:paddingTop="35dp">

            <ImageView
                android:id="@+id/ClothesImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/clothes" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ShoesTab"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="-30dp"
            android:layout_toRightOf="@+id/ClothesTab"
            android:background="@color/colorAccent"
            android:paddingBottom="5dp"
            android:paddingTop="35dp">

            <ImageView
                android:id="@+id/ShoesImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shoe" />
        </RelativeLayout>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/GearList"
        android:layout_below="@+id/tabs"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
