<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:id="@+id/hook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/extra_hook"
        android:backgroundTint="@color/weapon">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialogCard"
        android:layout_width="250dp"
        android:layout_height="410dp"
        android:layout_below="@+id/hook"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_card"
        android:backgroundTint="@color/offWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/repeatable_spots">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/weapon"
            android:elevation="4dp">

        </RelativeLayout>
        <ListView
            android:id="@+id/ItemList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bar"
            android:choiceMode="singleChoice"
            android:listSelector="@color/transparentgrey2"/>

    </RelativeLayout>
</RelativeLayout>