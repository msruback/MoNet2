<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    tools:context="com.mattrubacky.monet2.TurfRotation">

    <RelativeLayout
        android:id="@+id/fesStages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fesTimeSection">


        <ImageView
            android:id="@+id/fesStageImage1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/stage_1" />
        <TextView
            android:id="@+id/fesStageName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fesStageImage2"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="19dp"
            android:background="@drawable/shape_card"
            android:backgroundTint="#c8343434"
            android:paddingLeft="10dp"
            android:padding="5dp"
            android:paddingRight="10dp"
            android:text="The Reef"
            android:textColor="#e4e4e4"
            android:textSize="22sp" />
        <ImageView
            android:id="@+id/fesStageImage2"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fesStageImage1"
            android:layout_marginTop="7dp"
            android:src="@drawable/stage_2" />

        <TextView
            android:id="@+id/fesStageName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fesStageImage2"
            android:layout_alignEnd="@+id/fesStageName1"
            android:layout_marginBottom="3dp"
            android:background="@drawable/shape_card"
            android:backgroundTint="#c8343434"
            android:paddingLeft="10dp"
            android:padding="5dp"
            android:paddingRight="10dp"
            android:text="Musselforge Fitness"
            android:textColor="#e4e4e4"
            android:textSize="22sp" />
        <ImageView
            android:id="@+id/fesStageImage3"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fesStageImage2"
            android:layout_marginTop="7dp"
            android:src="@drawable/stage_2" />

        <TextView
            android:id="@+id/fesStageName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fesStageImage3"
            android:layout_alignEnd="@+id/fesStageName1"
            android:layout_marginBottom="3dp"
            android:background="@drawable/shape_card"
            android:backgroundTint="#c8343434"
            android:paddingLeft="10dp"
            android:padding="5dp"
            android:paddingRight="10dp"
            android:text="Musselforge Fitness"
            android:textColor="#e4e4e4"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fesTimeSection"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:background="#e0e0e0"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/repeat_dots" />

        <TextView
            android:id="@+id/fesTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-5dp"
            android:text="12:00PM - 2:00PM"
            android:textSize="22sp"/>
    </RelativeLayout>

</RelativeLayout>
