<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp" android:layout_height="220dp">

    <RelativeLayout
        android:id="@+id/hook"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/extra_hook"
        android:backgroundTint="@color/weapon">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/hook"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_card"
        android:backgroundTint="@color/weapon">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/repeat_stripes"
            android:paddingTop="22dp"
            android:paddingBottom="28dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/offWhite">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/repeat_circles">

                    <ImageView
                        android:id="@+id/GearImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/weapon_sloshing_machine" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:layout_centerHorizontal="true"
            android:text="Sloshing Machine"
            android:textSize="15sp"
            android:textColor="@color/grey"/>
    </RelativeLayout>
</RelativeLayout>