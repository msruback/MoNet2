<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mattrubacky.monet2.Startup">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bgsquidsrepeat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="92dp"
                android:background="@drawable/bgmaskhook"
                android:backgroundTint="#19d719"
                android:rotation="-2"
                android:id="@+id/relativeLayout2">

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="141dp"
                android:background="@drawable/bgcard"
                android:backgroundTint="#19d719"
                android:rotation="-2">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/relativeLayout2"
                android:background="@drawable/bgstripes"
                android:rotation="-2">

                <TextView
                    android:id="@+id/SwitchPrompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="71dp"
                    android:text="Paste the Nintendo Switch app login url here"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <EditText
                    android:id="@+id/LoginUrl"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/SwitchPrompt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgmaskbanner"
                    android:backgroundTint="#17ae17"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="URL" />

                <Button
                    android:id="@+id/UrlSubmit"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/LoginUrl"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/bgcard"
                    android:backgroundTint="#6d6d6d"
                    android:text="Submit" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
