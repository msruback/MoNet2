<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp" android:layout_height="220dp">

    <RelativeLayout
        android:id="@+id/hook"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/extra_hook"
        android:backgroundTint="@color/weapon">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="165dp"
        android:layout_below="@+id/hook"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_card"
        android:backgroundTint="@color/weapon">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/repeat_stripes">
            <RelativeLayout
                android:id="@+id/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="35dp"
                android:background="@color/offWhite">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/repeat_spots">

                    <ImageView
                        android:id="@+id/WeaponImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/weapon_sloshing_machine" />
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/white"
                android:layout_marginTop="-35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Sloshing Machine"
                android:textSize="12sp"
                android:textColor="@color/grey"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>