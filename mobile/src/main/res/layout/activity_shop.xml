<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mattrubacky.monet2.Shop">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/repeat_squids"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/Item"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="22dp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp"
                    android:id="@+id/relativeLayout4">

                    <RelativeLayout
                        android:id="@+id/Item"
                        android:layout_width="150dp"
                        android:layout_height="240dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="57dp"
                        android:background="@drawable/shape_card"
                        android:backgroundTint="#e4e4e4">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/repeat_circles">

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/Brand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/brand_annaki" />

                        <ImageView
                            android:id="@+id/product"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_alignBottom="@+id/Brand"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="11dp"
                            android:src="@drawable/extra_product" />

                        <ImageView
                            android:id="@+id/Image"
                            android:layout_width="126dp"
                            android:layout_height="126dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/hula_punk" />

                        <TextView
                            android:id="@+id/Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:text="Hula Punk Shirt"
                            android:textSize="13sp" />

                        <RelativeLayout
                            android:id="@+id/Abilities"
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@+id/Brand"
                            android:layout_marginEnd="10dp">

                            <RelativeLayout
                                android:id="@+id/mainAbility"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/skill_background"
                                android:padding="2dp">

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_alignParentEnd="true"
                                    android:src="@drawable/skill_main_ink_saver" />
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/Sub1"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_below="@id/mainAbility"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/skill_blank" />

                            <ImageView
                                android:id="@+id/Sub2"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_below="@id/Sub1"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/skill_blank" />

                            <ImageView
                                android:id="@+id/Sub3"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_below="@id/Sub2"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/skill_blank" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="21dp"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/product"
                            android:background="@drawable/banner_ink_left"
                            android:backgroundTint="@color/grey">

                            <TextView
                                android:id="@+id/Time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:text="1 Hour"
                                android:textColor="@color/offWhite"
                                android:textSize="13sp" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/InfoBar"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/Item"
                        android:background="@drawable/shape_card"
                        android:backgroundTint="@color/merchClothes">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:background="@color/merchClothes"></RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/repeat_stripes"></RelativeLayout>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignBottom="@+id/Cost"
                            android:layout_marginRight="10dp"
                            android:layout_toStartOf="@+id/Cost"
                            android:src="@drawable/icon_cash" />

                        <TextView
                            android:id="@+id/Cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="10000"
                            android:textColor="@color/offWhite"
                            android:textSize="13sp" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp"
                    android:layout_marginStart="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/relativeLayout4">

                    <RelativeLayout
                        android:id="@+id/Item"
                        android:layout_width="150dp"
                        android:layout_height="240dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="57dp"
                        android:background="@drawable/shape_card"
                        android:backgroundTint="#e4e4e4">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/repeat_circles">

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/Brand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/brand_annaki" />

                        <ImageView
                            android:id="@+id/product"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_alignBottom="@+id/Brand"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="11dp"
                            android:src="@drawable/extra_product" />

                        <ImageView
                            android:id="@+id/Image"
                            android:layout_width="126dp"
                            android:layout_height="126dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/hula_punk" />

                        <TextView
                            android:id="@+id/Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:text="Hula Punk Shirt"
                            android:textSize="13sp" />

                        <RelativeLayout
                            android:id="@+id/Abilities"
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@+id/Brand"
                            android:layout_marginEnd="10dp">

                            <RelativeLayout
                                android:id="@+id/mainAbility"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/skill_background"
                                android:padding="2dp">

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_alignParentEnd="true"
                                    android:src="@drawable/skill_main_ink_saver" />
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/Sub1"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_below="@id/mainAbility"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/skill_blank" />

                            <ImageView
                                android:id="@+id/Sub2"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_below="@id/Sub1"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/skill_blank" />

                            <ImageView
                                android:id="@+id/Sub3"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_below="@id/Sub2"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/skill_blank" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="21dp"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/product"
                            android:background="@drawable/banner_ink_left"
                            android:backgroundTint="@color/grey">

                            <TextView
                                android:id="@+id/Time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:text="1 Hour"
                                android:textColor="@color/offWhite"
                                android:textSize="13sp" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/InfoBar"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/Item"
                        android:background="@drawable/shape_card"
                        android:backgroundTint="@color/merchClothes">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:background="@color/merchClothes"></RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/repeat_stripes"></RelativeLayout>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignBottom="@+id/Cost"
                            android:layout_marginRight="10dp"
                            android:layout_toStartOf="@+id/Cost"
                            android:src="@drawable/icon_cash" />

                        <TextView
                            android:id="@+id/Cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="10000"
                            android:textColor="@color/offWhite"
                            android:textSize="13sp" />
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
