<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mattrubacky.monet2.BattleInfo">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:elevation="10dp"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:titleTextAppearance="@style/TitleTextStyle">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/offWhite"
            android:textSize="30sp" />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/menuBar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/favColorPurple"
                android:elevation="10dp">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/darkgrey">
                <RelativeLayout
                    android:id="@+id/spots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/repeat_spots">
                    <RelativeLayout
                        android:id="@+id/stageImage"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp"
                        android:background="@color/salmonAccent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/repeat_stripes"></RelativeLayout>
                        <ImageView
                            android:id="@+id/StageImage"
                            android:layout_width="wrap_content"
                            android:layout_height="250dp"
                            android:layout_margin="10dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/stage_lost_outpost"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignBottom="@id/StageImage"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/shape_card"
                            android:layout_alignLeft="@+id/StageImage"
                            android:backgroundTint="@color/transparentgrey"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp">

                            <TextView
                                android:id="@+id/StageName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Marooner's Bay"
                                android:textColor="@color/offWhite"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/weaponCard"
                        android:layout_below="@+id/stageImage"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginTop="-20dp"
                        android:layout_marginRight="-20dp"
                        android:layout_marginLeft="10dp"
                        android:rotation="-4"
                        android:background="@color/rankPrimary"
                        android:elevation="5dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:background="@drawable/repeat_triangles">
                            <RelativeLayout
                                android:id="@+id/weaponPunch"
                                android:layout_width="20dp"
                                android:layout_height="50dp"
                                android:background="@drawable/shape_card"
                                android:backgroundTint="@color/grey"></RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/weapon1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_toRightOf="@id/weaponPunch"
                                android:layout_marginLeft="25dp"
                                android:background="@drawable/salmon_egg">
                                <ImageView
                                    android:id="@+id/Weapon1"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/weapon_sloshing_machine"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/weapon2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_toRightOf="@id/weapon1"
                                android:layout_marginLeft="25dp"
                                android:background="@drawable/salmon_egg">
                                <ImageView
                                    android:id="@+id/Weapon2"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/weapon_sloshing_machine"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/weapon3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_toRightOf="@id/weapon2"
                                android:layout_marginLeft="25dp"
                                android:background="@drawable/salmon_egg">
                                <ImageView
                                    android:id="@+id/Weapon3"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/weapon_sloshing_machine"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/weapon4"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_toRightOf="@id/weapon3"
                                android:layout_marginLeft="25dp"
                                android:background="@drawable/salmon_egg">
                                <ImageView
                                    android:id="@+id/Weapon4"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/weapon_sloshing_machine"/>
                            </RelativeLayout>
                        </RelativeLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/jobCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="-40dp"
                        android:background="@drawable/shape_card"
                        android:backgroundTint="@color/grey"
                        android:layout_below="@+id/weaponCard">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="50dp"
                            android:background="@drawable/repeat_circles">
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/Jobs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:paddingBottom="20dp">
                                </android.support.v7.widget.RecyclerView>
                        </RelativeLayout>
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>