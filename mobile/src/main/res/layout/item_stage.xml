<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp" android:layout_height="220dp">
    <RelativeLayout
        android:id="@+id/alpha"
        android:layout_width="295dp"
        android:layout_height="165dp"
        android:layout_centerInParent="true"
        android:rotation="-4"
        android:background="@color/pearl">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/repeat_stripes"></RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bravo"
        android:layout_width="295dp"
        android:layout_height="165dp"
        android:layout_centerInParent="true"
        android:rotation="1"
        android:background="@color/marina">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/repeat_stripes"></RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="156dp"
        android:layout_centerInParent="true"
        android:background="@color/offWhite"
        android:rotation="-.5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/repeat_stripes"></RelativeLayout>
        <ImageView
            android:id="@+id/StageImage"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/stage_1"/>
        <TextView
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@color/transparentgrey2"
            android:padding="3dp"
            android:text="The Reef"
            android:textColor="@color/offWhite"/>
    </RelativeLayout>

</RelativeLayout>