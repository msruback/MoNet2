<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/hook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/extra_hook"
        android:backgroundTint="@color/grey"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="270dp"
        android:layout_height="210dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/hook"
        android:background="@drawable/shape_card"
        android:backgroundTint="@color/grey">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/repeat_stripes">

            <ImageView
                android:id="@+id/challengeImage"
                android:layout_width="270dp"
                android:layout_height="141dp"
                android:src="@drawable/next_challenge" />

            <TextView
                android:id="@+id/challengeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/challengeImage"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="19dp"
                android:background="@drawable/shape_card"
                android:backgroundTint="#c8343434"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="The Reef"
                android:textColor="#e4e4e4"
                android:textSize="22sp" />

            <RelativeLayout
                android:id="@+id/meterLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/challengeImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_card"
                android:backgroundTint="@color/darkgrey"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/meter"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_card"
                    android:backgroundTint="@color/darkgrey">

                    <RelativeLayout
                        android:id="@+id/ProgressMeter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:id="@+id/ProgressPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="5dp"
                            android:text="42.1%"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/repeat_stripes"></RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>