<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mattrubacky.monet2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MoNet 2"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver
            android:name=".reciever.DataUpdateAlarm"
            android:enabled="true"
            android:exported="true"
            android:process=":remote" />
        <receiver
            android:name=".reciever.NotificationAlarm"
            android:enabled="true"
            android:exported="true"
            android:process=":remote" />
        <receiver
            android:name=".reciever.BootReciever"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                >
            </intent-filter>
        </receiver>

        <service
            android:name=".service.OrderGear"
            android:exported="true" />

        <activity
            android:name=".Startup"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DebugActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddNotification"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BattleInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WeaponLockerDetail"
            android:screenOrientation="portrait" />
        <activity android:name=".ClosetDetail"
            android:screenOrientation="portrait" />
        <activity android:name=".AddGear"
            android:screenOrientation="portrait" />
        <activity android:name=".StagePostcardsDetail"
            android:screenOrientation="portrait" />
        <activity android:name=".SplatfestDetail"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>