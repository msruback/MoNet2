<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/TurfWar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="105dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_card"
            android:backgroundTint="@color/turfPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/repeat_zigzag"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/turfModeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp">

                <ImageView
                    android:id="@+id/regularIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/battle_regular" />

                <TextView
                    android:id="@+id/TurfMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/regularIcon"
                    android:text="Turf War" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/turfStageALayout"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_below="@+id/turfModeLayout"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_card"
                android:backgroundTint="@color/transparentgrey"
                android:paddingEnd="5dp"
                android:paddingStart="5dp">

                <TextView
                    android:id="@+id/TurfStageA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Humpback Pumptrack" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/turfStageBLayout"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/turfStageALayout"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_card"
                android:backgroundTint="@color/transparentgrey"
                android:paddingEnd="5dp"
                android:paddingStart="5dp">

                <TextView
                    android:id="@+id/TurfStageB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Inkblot Art Academy" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>