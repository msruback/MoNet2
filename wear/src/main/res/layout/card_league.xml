<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/League"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ranked"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="105dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_card"
            android:backgroundTint="@color/leaguePrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/repeat_zigzag"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/leagueModeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp">

                <ImageView
                    android:id="@+id/leagueIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/battle_league" />

                <TextView
                    android:id="@+id/LeagueMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/leagueIcon"
                    android:text="Rainmaker" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/leagueStageA"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/leagueModeLayout"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_card"
                android:backgroundTint="@color/transparentgrey"
                android:paddingEnd="5dp"
                android:paddingStart="5dp">

                <TextView
                    android:id="@+id/LeagueStageA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Humpback Pumptrack" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/leagueStageB"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/leagueStageA"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_card"
                android:backgroundTint="@color/transparentgrey"
                android:paddingEnd="5dp"
                android:paddingStart="5dp">

                <TextView
                    android:id="@+id/LeagueStageB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Inkblot Art Academy" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>